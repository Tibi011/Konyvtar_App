<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Konyvtar_App" Height="600" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>


        <StackPanel Margin="10" 
                    Grid.Column="0" 
                    VerticalAlignment="Stretch">

            <ComboBox
                Text="Műfaj" Width="150"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                >

            </ComboBox>
            
            <TextBlock Text="Keresés cím alapján:" 
                       Grid.RowSpan="1"/>
            <TextBox x:Name="txtKeres" 
                     Margin="0 5 0 10"
                     />

            <CheckBox Content="Kölcsönözhető"
                      IsChecked="False"
                      >
                
            </CheckBox>

            <Separator Margin="0 15 0 10" />

            <TextBlock Text="Könyv kezelése:" 
                       FontWeight="Bold" />

            <TextBlock Text="Cím:" />
            <TextBox x:Name="txtCim" 
                     Margin="0 5 0 10" />


            <TextBlock Text="Szerző:" />
            <TextBox x:Name="txtSzerzo" 
                     Margin="0 5 0 10" />


            <TextBlock Text="Kiadási éve:" />
            <TextBox x:Name="txtKiadev" 
                     Margin="0 5 0 10" />
            
            <TextBlock Text="Műfaj:" />
            <TextBox x:Name="txtMufaj" 
                     Margin="0 5 0 10" />

            <StackPanel Orientation="Horizontal" 
                        Margin="0 10 0 10">
                <Button Content="Hozzáadás" 
                        Width="90" 
                        Margin="2" 
                        Click="Hozzaad_Button_Click"/>
                <Button Content="Módosítás" 
                        Width="90" 
                        Margin="2" 
                         Click="Modosit_Button_Click"/>

                <Button Content="Törlés" 
                        Width="90" 
                        Margin="2" 
                         Click="Urlap_Button_Click"/>
            </StackPanel>


            <StackPanel Orientation="Horizontal">
                <Button Content="Űrlap törlése és az adatok betöltése" 
                        Width="280" 
                        Click="Frissites_Button_Click"
                        />
            </StackPanel>
            
        </StackPanel>

        <StackPanel Margin="10" 
                    Grid.Column="1" 
                    VerticalAlignment="Stretch">

            <!-- <TextBlock Text="Műfaj:" 
                       Grid.RowSpan="1"/>
            <TextBox x:Name="txtDMu" 
                     Margin="0 5 0 10"
                     />-->



            

        </StackPanel>

        
        <DataGrid x:Name="Konyvtar" 
                  Grid.Column="1" 
                  Margin="10,10,10,10" 
                  AutoGenerateColumns="True"
                  SelectionChanged="Konyvtar_SelectionChanged"
        />


    </Grid>
</Window>
